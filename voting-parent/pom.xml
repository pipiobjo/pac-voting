	<modelVersion>4.0.0</modelVersion>

	<groupId>com.prodyna.pac.bp</groupId>
	<artifactId>voting-parent</artifactId>
	<packaging>pom</packaging>
	<version>0.0.1-SNAPSHOT</version>
